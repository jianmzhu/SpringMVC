<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<!-- 此处xmlHello是XMLHomeController跳转的结果，url映射需要调用org.springframework.web.servlet.view.JstlView -->
	<bean id="xmlHello" class="org.springframework.web.servlet.view.JstlView">
	   <property name="url" value="/WEB-INF/views/xmlViews/home.jsp" />
	</bean>	
</beans>
